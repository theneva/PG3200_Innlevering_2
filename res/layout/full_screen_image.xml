<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutFullScreenImage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/imageViewFullScreenImage"
        android:layout_width="333dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.40"
        android:contentDescription="@string/image_view_content" />
    <TextView
        android:id="@+id/textViewFullScreenImageTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewFullScreenImageDateTaken"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>